{
  "cli": {
    "version": ">= 14.2.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development"
    },
    "preview": {
      "distribution": "internal",
      "hooks": {
        "postInstall": "echo $GOOGLE_SERVICES_JSON > android/app/google-services.json"
      },
      "channel": "staging",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "autoIncrement": true,
      "channel": "production"
    }
  },
  "submit": {
    "production": {
      "hooks": {
        "postInstall": "echo $GOOGLE_SERVICES_JSON > android/app/google-services.json"
      },
      "android": {
        "track": "production",
        "changesNotSentForReview": true
      }
    }
  }
}
